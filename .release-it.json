{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "hooks": {},
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "${version}"
  },
  "npm": {
    "publish": true,
    "publishArgs": ["--provenance"]
  },
  "github": {
    "release": true,
    "assets": ["*.tgz"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}